<div class="parts">
  <h1>Smartmaker Kits</h1>

  <table class="table table-hover table-compact">
    <thead>
      <tr>
        <th style="width: 15%">Name</th>
        <th style="width: 15%">Status</th>
        <th>Parts</th>
      </tr>
    </thead>
    <tbody>
      <% for kit in @kits %>
        <tr>
          <td><%= kit.name.sub("â€“", "<br />").html_safe %></td>
          <td style="background-color: <%= kit.color %>"><%= kit.human_status %></td>
          <td>
            <% kit.db_parts.each do |part| %>
              <span style="background-color: <%= part.color %>"><%= part.name %></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <h1>Smartmaker Parts</h1>

  <table class="table table-hover table-compact">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% for part in @parts %>
        <tr style="background-color: <%= part.color %>">
          <td><%= part.sku %></td>
          <td><%= part.name %></td>
          <td><%= part.human_status %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
